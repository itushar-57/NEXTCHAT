{
  "name": "Server",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the server"
    },
    "description": {
      "type": "string",
      "description": "Server description"
    },
    "icon_url": {
      "type": "string",
      "description": "Server icon image URL"
    },
    "owner_id": {
      "type": "string",
      "description": "User ID of the server owner"
    },
    "invite_code": {
      "type": "string",
      "description": "Unique invite code for the server"
    },
    "is_public": {
      "type": "boolean",
      "default": false,
      "description": "Whether the server is publicly discoverable"
    }
  },
  "required": [
    "name",
    "owner_id"
  ]
}